    <bean id="apiDoc" class="com.hrp.rest.config.SwaggerConfig"/>

    <!-- 自动扫描的包名 ，使Spring支持自动检测组件，如注解的RestController -->
    <context:component-scan base-package="com.hrp.rest"/>

